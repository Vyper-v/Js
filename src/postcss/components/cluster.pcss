@layer components {
  /* The Cluster
-----------------------------------------------------------------------*/
  .cluster {
    --space: 1rem;
    @apply overflow-hidden;
  }

  .cluster > * {
    @apply flex flex-wrap justify-start items-center;
    margin: calc(var(--space) / 2 * -1);
  }

  .cluster > * > * {
    margin: calc(var(--space) / 2);
  }
}
